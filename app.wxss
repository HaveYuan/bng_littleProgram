.yellow{
  color: #FDE300;
}
.orange{
  color: #FABD00;
}
.red{
  color:　#F76260;
}
.bg-red{
  background: #F76260;
}
.green{
  color: #09BB07;
}
.nav-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  border-top: 1px solid #eee;
  background: #fff;
  display: flex;
  z-index: 2;
}
.nav-bar>view{
  flex: 1;
  display: flex;
  align-items: center;
  border-top: 1px solid #eee;
  background: #fff;
}
.nav-bar>view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fabd00;
}
.nav-icon{
  margin-right: 10rpx;
  width: 34rpx;
  height: 30rpx;
}
.nav-icon1{
  margin-top: 4rpx;
}
.nav-icon2{
  width: 30rpx;
  height: 34rpx;
}
.return-box{
  width: 100%;
  height: 58rpx;
  background: #fff;
  font-size: 28rpx;
  color: #fabd00;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  padding-left: 28rpx;
  box-sizing: border-box;
}
.return-box>view{
  display: flex;
  align-items: center;
}
.return{
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

/* 提示框样式  */
.add-success{
  width: 184px;
  height: 150px;
  background: rgba(107,107,107,0.8);
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -75px;
  margin-left: -92px;
  border-radius: 25rpx;
  color: #fff;
  text-align: center;
}
.add-success>view{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.add-success>view image{
  display: block;
  width: 65px;
  height: 47px;
}
.add-success text{
  display: block;
  font-size: 32rpx;
  margin-top: 26px;
}

